<h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "show", book_path(book.id) %></td>
   <td><%= link_to "edit", edit_book_path(book.id) %></td>
   <td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
  </tr>
  </tbody>
<% end %>
</table>
  <h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <ul>
   <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
      <p>error</p>
      <li><%= message %></li>
      <% end %>
   <% end %>
  </ul>

  <%= f.submit 'Create Book' %>

<% end %>
</html>
