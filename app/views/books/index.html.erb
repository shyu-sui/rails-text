<p id="notice"></p>
<h1>Books</h1>
<table>
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %></span>
<% end %>
</table>
  <h2>新規投稿</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>カテゴリー</h4>
  <%= f.text_field :category %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>
</html>
